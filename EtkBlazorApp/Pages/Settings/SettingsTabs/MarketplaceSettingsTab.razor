

<div id="main_tab">
    <h3>YandexMarket</h3>
    <div class="form-group">
        <label for="yandex_market_min_export_price">Минимальная цена выгрузки</label>
        <input type="number" min="0" class="form-control" id="yandex_market_min_export_price" @bind="yandex_market_minimumPrice">
    </div>
    <div class="form-group">
        <label for="yandex_market_under_min_price_ratio">Множитель для товаров с ценой меньше минимальной (1 = без множителя)</label>
        <input type="number" min="1" class="form-control" id="yandex_market_under_min_price_ratio" @bind="yandex_market_underRatio">
    </div>

    <h3>Seller Ozon</h3>
    <div class="form-group">
        <label for="ozon_seller_min_export_price">Минимальная цена выгрузки</label>
        <input type="number" min="0" class="form-control" id="ozon_seller_min_export_price" @bind="ozon_seller_minimumPrice">
    </div>

    <h3>Sbermegamarket</h3>
    <div class="form-group">
        <label for="sbermegamarket_export_min_price">Минимальная цена выгрузки</label>
        <input type="number" min="0" class="form-control" id="sbermegamarket_export_min_price" @bind="sbermegamarket_minimumPrice">
    </div>

    <h3>ВсеИнструменты</h3>
    <div class="form-group">
        <label for="gln">GLN поставщика</label>
        <input type="text" class="form-control" id="gln" @bind="vse_instrumenty_gln">
    </div>
</div>

@code {

    [Inject] public ISettingStorage settings { get; set; }
    [CascadingParameter] public SettingsTabData tabData { get; set; }

    decimal ozon_seller_minimumPrice;
    decimal yandex_market_minimumPrice;
    decimal sbermegamarket_minimumPrice;
    decimal yandex_market_underRatio;
    string vse_instrumenty_gln;

    protected override async Task OnInitializedAsync()
    {
        ozon_seller_minimumPrice = await settings.GetValue<decimal>("ozon_seller_export_minimum_price");
        sbermegamarket_minimumPrice = await settings.GetValue<decimal>("sbermegamarket_export_minimum_price");
        yandex_market_minimumPrice = await settings.GetValue<decimal>("yandex_market_export_minimum_price");
        yandex_market_underRatio = await settings.GetValue<decimal>("yandex_market_export_under_minimum_ratio");
        vse_instrumenty_gln = await settings.GetValue<string>("vse_instrumenti_gln");

        tabData.SaveButtonClicked = new Action(async () =>
        {
            await settings.SetValue("ozon_seller_export_minimum_price", ozon_seller_minimumPrice);
            await settings.SetValue("sbermegamarket_export_minimum_price", sbermegamarket_minimumPrice);
            await settings.SetValue("yandex_market_export_minimum_price", yandex_market_minimumPrice);
            await settings.SetValue("yandex_market_export_under_minimum_ratio", yandex_market_underRatio);
            await settings.SetValue("vse_instrumenti_gln", vse_instrumenty_gln);
        });
    }
}