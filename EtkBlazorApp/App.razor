<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" 
                                DefaultLayout="@typeof(EtkBlazorApp.Shared.MainLayout)" >
                <NotAuthorized>
                    <h3>Недостаточно прав для просмотра содержимого</h3>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
          <EtkBlazorApp.Pages.NotFoundPage></EtkBlazorApp.Pages.NotFoundPage>
        </NotFound>
    </Router>
</CascadingAuthenticationState>