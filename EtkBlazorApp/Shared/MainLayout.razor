@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ICurrencyChecker currencyChecker
@using System.Globalization

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <AuthorizeView>
            <Authorized>
                <p><span class="oi oi-euro currency-top">@euro.ToString("F2", CultureInfo.InvariantCulture)</span></p>
                <p><span class="oi oi-dollar currency-top">@usd.ToString("F2", CultureInfo.InvariantCulture)</span></p>
                <p><strong>@context.User.Identity.Name</strong>&nbsp;&nbsp;<a href="/Login" @onclick="LogOut">Выйти</a></p>
            </Authorized>
            <NotAuthorized>
                <a href="/Login">Войти</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code {

    decimal usd, euro;
    public void LogOut()
    {
        ((MyCustomAuthProvider)AuthenticationStateProvider).LogOutUser();
    }

    protected override async Task OnInitializedAsync()
    {
        euro = await currencyChecker.GetCurrencyRate(BL.Data.CurrencyType.EUR);
        usd = await currencyChecker.GetCurrencyRate(BL.Data.CurrencyType.USD);
    }
}