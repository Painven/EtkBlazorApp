@using EtkBlazorApp.Model.Order

@if (Tag.Type != OrderTagType.None)
{
    <button class="btn btn-sm btn-@background">
        <span class="oi oi-@icon"></span>
    </button>
}

@code {
    [Parameter] public OrderTagViewModel Tag { get; set; }

    private string icon => cssMap[Tag.Type].Item2;
    private string background => cssMap[Tag.Type].Item1;

    private readonly Dictionary<OrderTagType, Tuple<string, string>> cssMap = new()
        {
            [OrderTagType.ShippingTimeExceed] = Tuple.Create("danger", "fire")
        };
}
