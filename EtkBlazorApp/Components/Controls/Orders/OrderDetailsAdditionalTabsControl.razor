<div class="row">
    <div class="btn-group">
        @foreach (var tab in tabData)
        {
            <button class="btn btn-outline-primary @(selectedTab == tab ? "active" : "")"
                @onclick="@(e => selectedTab = tab)">
                @tab
            </button>
        }
    </div>
</div>

<div class="row">
    <div class="order-details-tabs w-100" style="margin: 20px 0px;">
        @if (selectedTab == "Другие заказы клиента")
        {
            <LinkedOrdersListControl OrderId="@Order.OrderId" />
        }
        else if (selectedTab == "Статус СДЭК")
        {
            <CdekOrderInfoControl Order="@Order" />
        }
        else if (selectedTab == "Информация по ИНН")
        {
            <InnCheckerControl Inn="@Order.Inn" />
        }
    </div>
</div>

@code {
    [Parameter] public OrderViewModel Order { get; set; }

    string selectedTab = "";
    string[] tabData = new string[] { "Другие заказы клиента", "Статус СДЭК", "Информация по ИНН" };
}
