<div class="ozon-manufacturer-discount-item" style="opacity: @(Item.IsChecked ? "1" : "0.6");">
    <input type="checkbox"
           min="-99" max="999"
           style="display: inline-block; transform: scale(1.5); margin: 4px 10px;"
           @bind="@Item.IsChecked" />
    <p style="display: inline-block; font-size: 20px; color: white; width: 100%;">
        @Item.Manufacturer
    </p>
    <input type="number"
           class="form-control"
           style="display: inline-block; width: auto; margin: 4px 10px;"
           @bind-value="@Item.Discount" />
</div>

@code {

    [Parameter]
    public OzonManufacturerDiscountViewModel Item { get; set; }

    [Parameter]
    public EventCallback ItemChanged { get; set; }

    protected override void OnParametersSet()
    {
        Item.PropertyChanged += OnStateChanged;
    }

    private void OnStateChanged(object o, System.ComponentModel.PropertyChangedEventArgs e)
    {
        ItemChanged.InvokeAsync();
        StateHasChanged();
    }

}
